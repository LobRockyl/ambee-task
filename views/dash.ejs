<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= name %></p>
<a href="/auth/logout" class="btn btn-secondary">Logout</a>

<form action="/auth/aqi" method="POST">
    <input type="hidden"  name="name" value="<%= name%>" id="name" />

  <div class="form-group">
    <label for="exampleFormControlSelect1">Example select</label>
    <select class="form-control" id="exampleFormControlSelect1" name="pollutant" value="<%=locals.aqi?aqi.pollutant:'None'%>">

      <option>pm25</option>
      <option>pm10</option>
      <option>so2</option>
      <option>no</option>
      <option>nox</option>
      <option>no2</option>
      <option>o3</option>
      <option>co</option>

    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Value</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="value"></textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-block">Calculate</button>

</form>
<%if(locals.aqi){%>
  
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">AQI value: <%=aqi.aqi%></h1>
      <p class="lead">POLLUTANT: <%=aqi.pollutant%></p>
      <p>VALUE: <%=aqi.value%></p>

    </div>
  </div>
  
<%}%>  